{% extends 'base.html.twig' %}

{% block title %}Starshop - Home{% endblock %}

{% block body %}

<h1>Starshop: your monopoly-busting option for Starship parts!</h1>

<div>
    Browse through {{ships|length}} starships.
</div>

<div>
    <h2>My Ship</h2>
    <table>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Captain</th>
            <th>Status</th>
        </tr>
        <tr>
            <td>{{ myShip.name }}</td>
            <td>{{ myShip.class }}</td>
            <td>{{ myShip.captain|title }}</td>
            <td>{{ myShip.status }}</td>
        </tr>
    </table>
</div>

{% endblock %}